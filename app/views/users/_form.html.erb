<%= render "shared/errors", obj: @user %>
<table>
  <tr>
    <th>番号</th>
    <td><%= formData.text_field :number %></td>
  </tr>
  <tr>
    <th>名前</th>
    <td><%= formData.text_field :name %></td>
  </tr>
  <tr>
    <th><%= formData.label :password %></th>
    <td><%= formData.password_field :password %></td>
  </tr>
  <tr>
    <th><%= formData.label :password_confirmation %></th>
    <td><%= formData.password_field :password_confirmation %></td>
  </tr>
</table>

<% unless @user.new_record? %>
<p>パスワードを変更しない時は、パスワード入力する欄を空にしてください</p>
<% end %>
