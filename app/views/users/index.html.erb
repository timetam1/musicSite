<% @page_title = "会員名簿" %>
<h1><%= @page_title %></h1>

<%= form_tag :search_users, method: :get do %>
<p><%= text_field_tag "q", params[:q] %>
<%= submit_tag "検索" %></p>
<% end %>

<p><%= link_to "会員の新規登録", :new_user %></p>

<% if @users.present? %>
<table>
  <tr>
    <th>背番号</th>
    <th>ユーザー名</th>
    <th>操作</th>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td><%= user.number %></td>
    <td><%= link_to user.name, user %></td>
    <td>
      <%= link_to "編集", [:edit, user] %> |
      <%= link_to "削除", user, method: :delete,
      date: {confirm: "本当に削除しますか?" } %>
    </td>
  </tr>
  <% end %>
</table>
<% else %>
<p>会員情報がありません</p>
<% end %>
